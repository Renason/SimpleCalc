# + ---- styly ----------

# Vseobecny styl tlacitka
<Button>:
    font_name: 'assets/firasansbold.ttf'
    size_hint_x: None
    size_hint_y: None
    width: 75 
    height: 75
    background_normal: ''

# Cislice
<NumButton@Button>:
    font_size: 32
    color: (0.11, 0.098, 0.098, 1)
    background_color: (0.925, 0.941, 0.945, 1)

# Operacie/Funkcie
<OpButton@Button>:
    font_size: 32
    color: (1, 1, 1, 1)
    background_color: (0.11, 0.096, 0.098, 1)

# Vypocet (rovna sa) 
<EqButton@Button>:
    font_size: 32
    color: (1, 1, 1, 1)
    background_color: (0.906, 0.298, 0.235, 1)
    text: "="
    width: 225

# Specialne tlacitka (delete, AC)
<SpButton@Button>:
    font_size: 32
    background_color: (0.173, 0.243, 0.314, 1)
    color: (1, 1, 1, 1)

# Riadok tlacitok
<Row@BoxLayout>:
    size_hint_x: None
    size_hint_y: None
    width: 450
    height: 75
    spacing: 1
    background_normal: ''
    background_color: (0.173, 0.243, 0.314, 1)

# vstupne textove pole
<InputBox@TextInput>:
    font_size: 44
    multiline: False
    background_normal: ''
    background_color: (0.843, 0.914, 0.973, 1)
    color: (0.149, 0.137, 0.137, 1)
    size_hint_x: None
    size_hint_y: None
    width: 378
    height: 75


# + --------------------- + 

<CalcGridLayout>:
    id: calculator
    display: inputbox 
    rows: 7
    columns: 6 
    padding: 0 
    spacing: 1
    background_normal: ''
    background_color: (0.8, 0.8, 0.8, 1)     
    size_hint_x: None
    size_hint_y: None
    width: 450
    height: 475
    default_row_height: 75
    default_col_width: 75

    # 0. riadok
    Row:
        height: 25
        background_color: (0.11, 0.098, 0.098, 1)
        Label:
            text: "SimpleCalc v1.0"
            color: (0.5, 0.5, 0.5, 1)
            background_color: (1, 1, 1, 1)
            width: 400
            padding: (0, 0)
            halign: 'left'

    # 1. riadok
    Row:
        InputBox:
            id: inputbox
            text: ""
        SpButton:
            text: u"\u232B"
            on_press: calculator.delete()

    # 2. riadok
    Row:
        OpButton:
            text: "("
            on_press: calculator.numpress(self.text)
        OpButton:
            text: ")"
            on_press: calculator.numpress(self.text)
        OpButton:
            text: "\xcf\x80"
            on_press: calculator.numpress("\xcf\x80")
        OpButton:
            text: "?"
            on_press: app.dochelp()
            width: 150
        SpButton:
            text: "AC"
            on_press: calculator.ac()

    
    # 3. riadok
    Row:
        NumButton:
            text: "7"
            on_press: calculator.numpress(self.text)
        NumButton:
            text: "8"
            on_press: calculator.numpress(self.text)
        NumButton:
            text: "9"
            on_press: calculator.numpress(self.text)
        OpButton:
            text: "n!"
            on_press: calculator.oppress("!")
        OpButton:
            text: "sin(x)"
            font_size: 20
            on_press: calculator.trigpress("sin")
        OpButton:
            text: "cos(x)"
            font_size: 20
            on_press: calculator.trigpress("cos")


    # 4. riadok
    Row:
        NumButton:
            text: "4"
            on_press: calculator.numpress(self.text)
        NumButton:
            text: "5"
            on_press: calculator.numpress(self.text)
        NumButton:
            text: "6"
            on_press: calculator.numpress(self.text)
        OpButton:
            text: u"\u002D"
            on_press: calculator.signpress("-")
        OpButton:
            text: u"\u00F7"
            on_press: calculator.oppress("/")
        OpButton:
            text: u"\u02B8" + "\xe2\x88\x9a" + "x"
            on_press: calculator.oppress("\xe2\x88\x9a")



    # 5. riadok
    Row:
        NumButton:
            text: "1"
            on_press: calculator.numpress(self.text)
        NumButton:
            text: "2"
            on_press: calculator.numpress(self.text)
        NumButton:
            text: "3"
            on_press: calculator.numpress(self.text)
        OpButton:
            text: u"\u002B"
            on_press: calculator.signpress("+")
        OpButton:
            text: u"\u00D7"
            on_press: calculator.oppress("*")
        OpButton:
            text: u"x\u207F"
            on_press: calculator.oppress("^")

    # 6. riadok
    Row:
        NumButton:
            text: "0"
            on_press: calculator.numpress(self.text)
            width: 151
        OpButton:
            text: ","
            background_color: (0.925, 0.941, 0.945, 1)
            color: (0.11, 0.098, 0.098, 1)
            on_press: calculator.dotpress()
        EqButton:
            on_press: calculator.calculate(inputbox.text)
