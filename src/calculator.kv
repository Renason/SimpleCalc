
<CustButton@Button>:
    font_size: '64sp'
    color: (0.11, 0.098, 0.098, 1)
    background_normal: ''
    background_color: (0.925, 0.941, 0.945, 1)
    font_name: 'assets/firasansbold.ttf'

<CalcGridLayout>:
    id: calculator
    display: entry
    rows: 6
    columns: 4
    padding: 0 
    spacing: 1
    background_normal: ''
    background_color: (0.8, 0.8, 0.8, 1)     

    BoxLayout:
        TextInput:
            id: entry
            font_size: '42sp'
            multiline: False
            background_normal: '' 
            background_color: (0.843, 0.914, 0.973, 1)
            color: (0.149, 0.137, 0.137, 1)
    BoxLayout:
        spacing: 1 
        CustButton:
            text: "AC"
            on_press: entry.text = ""
            background_color: (0.173, 0.243, 0.314, 1)
            color: (1, 1, 1, 1)
        CustButton:
            text: "sqrt"
            on_press: entry.text = "sqrt" 
            background_color: (0.149, 0.137, 0.137, 1)
            color: (1, 1, 1, 1) 
        CustButton:
            text: "exp"
            on_press: entry.text = "exp" 
            background_color: (0.149, 0.137, 0.137, 1)
            color: (1, 1, 1, 1) 
        CustButton:
            text: "/"
            on_press: entry.text += self.text
            background_color: (0.149, 0.137, 0.137, 1)
            color: (1, 1, 1, 1) 
   
    BoxLayout:
        spacing: 1 
        CustButton:
            text: "7"
            on_press: entry.text += self.text
        CustButton:
            text: "8"
            on_press: entry.text += self.text
        CustButton:
            text: "9"
            on_press: entry.text += self.text
        CustButton:
            text: "x"
            on_press: entry.text += self.text
            background_color: (0.149, 0.137, 0.137, 1)
            color: (1, 1, 1, 1) 

    BoxLayout:
        spacing: 1
        CustButton:
            text: "4"
            on_press: entry.text += self.text
        CustButton:
            text: "5"
            on_press: entry.text += self.text
        CustButton:
            text: "6"
            on_press: entry.text += self.text
        CustButton:
            text: "-"
            on_press: entry.text += self.text
            background_color: (0.149, 0.137, 0.137, 1)
            color: (1, 1, 1, 1) 

    BoxLayout:
        spacing: 1
        CustButton:
            text: "1"
            on_press: entry.text += self.text
        CustButton:
            text: "2"
            on_press: entry.text += self.text
        CustButton:
            text: "3"
            on_press: entry.text += self.text
        CustButton:
            text: "+"
            on_press: entry.text += self.text
            background_color: (0.149, 0.137, 0.137, 1)
            color: (1, 1, 1, 1) 
    BoxLayout:
        spacing: 1
        CustButton:
            text: "0"
            on_press: entry.text += self.text
        CustButton:
            text: ","
            on_press: entry.text += self.text
        CustButton:
            size_hint_x: None
            width: 600
            background_color: (0.906, 0.298, 0.235, 1)
            color: (1,1,1,1)
            text: "=" 
            on_press: calculator.calculate(entry.text)
