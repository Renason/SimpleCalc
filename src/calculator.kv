# + ---- styly ----------

# Vseobecny styl tlacitka
<Button>:
    font_name: 'assets/firasansbold.ttf'
    size_hint_x: None
    size_hint_y: None
    width: 75 
    height: 75
    background_normal: ''

# Cislice
<NumButton@Button>:
    font_size: 32
    color: (0.11, 0.098, 0.098, 1)
    background_color: (0.925, 0.941, 0.945, 1)

# Operacie/Funkcie
<OpButton@Button>:
    font_size: 32
    color: (1, 1, 1, 1)
    background_color: (0.11, 0.096, 0.098, 1)

# Vypocet (rovna sa) 
<EqButton@Button>:
    font_size: 32
    color: (1, 1, 1, 1)
    background_color: (0.906, 0.298, 0.235, 1)
    text: "="

# Specialne tlacitka (delete, AC)
<SpButton@Button>:
    font_size: 32
    background_color: (0.173, 0.243, 0.314, 1)
    color: (1, 1, 1, 1)

# Riadok tlacitok
<Row@BoxLayout>:
    size_hint_x: None
    size_hint_y: None
    width: 300
    height: 75
    spacing: 1
    background_normal: ''
    background_color: (0.173, 0.243, 0.314, 1) 

# vstupne textove pole
<InputBox@TextInput>:
    font_size: 32
    multiline: False
    background_normal: ''
    background_color: (0.843, 0.914, 0.973, 1)
    color: (0.149, 0.137, 0.137, 1)
    size_hint_x: None
    size_hint_y: None
    width: 450
    height: 75


# + --------------------- + 

<CalcGridLayout>:
    id: calculator
    display: inputbox 
    rows: 6
    columns: 6 
    padding: 0 
    spacing: 1
    background_normal: ''
    background_color: (0.8, 0.8, 0.8, 1)     
    size_hint_x: None
    size_hint_y: None
    width: 450
    height: 450
    default_row_height: 75
    default_col_width: 75
    
    # 1. riadok
    Row:
        InputBox:
            id: inputbox
            text: "" 
    # 2. riadok
    Row:
        OpButton:
            text: "x!"
            on_press: calculator.oppress("!")
        OpButton:
            text: "\xe2\x88\x9a"
            on_press: calculator.oppress("\xe2\x88\x9a")
        OpButton:
            text: u"x\u207F"
            on_press: calculator.oppress("^")
        OpButton:
            text: u"\u00F7"
            on_press: calculator.oppress("/")
        SpButton:
            text: "DEL"
            on_press: calculator.delete()
        SpButton:
            text: "AC"
            on_press: calculator.ac()
    
    # 3. riadok
    Row:
        NumButton:
            text: "7"
            on_press: calculator.numpress(self.text)
        NumButton:
            text: "8"
            on_press: calculator.numpress(self.text)
        NumButton:
            text: "9"
            on_press: calculator.numpress(self.text)
        OpButton:
            text: u"\u00D7"
            on_press: calculator.oppress("*")
    
    # 4. riadok
    Row:
        NumButton:
            text: "4"
            on_press: calculator.numpress(self.text)
        NumButton:
            text: "5"
            on_press: calculator.numpress(self.text)
        NumButton:
            text: "6"
            on_press: calculator.numpress(self.text)
        OpButton:
            text: u"\u002D"
            on_press: calculator.oppress("-")
    
    # 5. riadok
    Row:
        NumButton:
            text: "1"
            on_press: calculator.numpress(self.text)
        NumButton:
            text: "2"
            on_press: calculator.numpress(self.text)
        NumButton:
            text: "3"
            on_press: calculator.numpress(self.text)
        OpButton:
            text: u"\u002B"
            on_press: calculator.oppress("+")

    # 6. riadok
    Row:
        NumButton:
            text: "0"
            width: 150
        OpButton:
            text: ","
            background_color: (0.925, 0.941, 0.945, 1)
            color: (0.11, 0.098, 0.098, 1)
            on_press: calculator.dotpress()
        EqButton:
            on_press: calculator.calculate(inputbox.text)
